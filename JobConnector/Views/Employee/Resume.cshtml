
@{
    ViewBag.Title = "Resume";
    var user = (JobConnector.Models.User) Session["user"];
    var res = (JobConnector.Models.CV)ViewData["resume"];
}

<div class="container">
    <h1 class="text-center">Build Your Resume</h1>
    <h2>Personal Information</h2>
    <form class="col-12 " method="post">
        <div class="row">
            <p class="text-success">@ViewData["success_message"]</p>
            <p class="text-warning">@ViewData["warn_message"]</p>
            <p class="text-danger">@ViewData["error_message"]</p>
        </div>
        <div class="row mt-2">
            <div class="col-6">
                <label for="fullname">Full Name</label>
                <input type="text" name="fullname" value="@user.Name" class="form-control" readonly />
            </div>

            <div class="col-6">
                <label for="username">Username</label>
                <input type="text" name="username" value="@user.UserName" class="form-control" readonly />
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-6">
                <label for="email">Email</label>
                <input type="email" name="email" value="@user.Email" class="form-control" readonly />
            </div>

            <div class="col-6">
                <label for="phone">Mobile Number</label>
                <input type="text" name="phone" value="@user.Phone" class="form-control" readonly />
            </div>
        </div>

        <div class="col-12 mt-1">
            <label for="phone">Address</label>
            <textarea name="address" class="form-control" rows="5" readonly>@user.Address</textarea>
        </div>

        <h2>Education Information</h2>
        <h3>University/College</h3>
        <div class="row mt-2">
            <div class="col-4">
                <label for="college">University/College Name</label>
                <input 
                       type="text" name="college_name"
                       class="form-control" value="@res.college_name" required placeholder="ABC University" />
            </div>

            <div class="col-4">
                <label for="degree">Degree</label>
                <input 
                       type="text" name="college_degree"
                       class="form-control" value="@res.college_degree" required placeholder="Masters Degree in Social Sciences" />
            </div>

            <div class="col-4">
                <label for="period">Period</label>
                <input 
                       type="text" name="college_period" 
                        value="@res.college_period"
                       class="form-control" required />
            </div>
        </div>

        <h3>High School</h3>
        <div class="row mt-2">
            <div class="col-4">
                <label for="high">High School Name</label>
                <input 
                       type="text" name="high_school_name"
                        value="@res.high_school_name"
                       class="form-control" required 
                       placeholder="ABC High School" />
            </div>

            <div class="col-4">
                <label for="subjects">Number of Subjects</label>
                <input 
                       type="text" name="high_school_subjects"
                        value="@res.high_school_subjects"
                       class="form-control" placeholder="Maths;English,..." required />
            </div>

            <div class="col-4">
                <label for="high_graduation">Graduation Year</label>
                <input 
                       type="number" name="high_school_graduation"
                        value="@res.high_school_graduation"
                       class="form-control" min="2000" required />
            </div>
        </div>

        <h2>Employment Information</h2>
        <div class="row mt-2">
            <div class="col-4">
                <label for="company">Company</label>
                <input 
                       type="text" name="company_name"
                        value="@res.company_name"
                       class="form-control" required placeholder="Company ABC (Pvt) Ltd" />
            </div>

            <div class="col-4">
                <label for="position">Position</label>
                <input 
                       type="text" name="position"
                        value="@res.position"
                       class="form-control" required placeholder="Senior Developer..." />
            </div>

            <div class="col-4">
                <label for="emp_period">Period</label>
                <input
                       type="text" name="company_period"
                        value="@res.college_period"
                       class="form-control" required placeholder="Jan 2020 - Jun 2023" />
            </div>
        </div>

        <div class="row my-2 d-flex justify-content-center">
            <button class="btn btn-primary col-4" type="submit">UPDATE</button>
        </div>
    </form>
</div>


