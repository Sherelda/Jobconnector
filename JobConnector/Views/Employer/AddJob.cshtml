
@{
    ViewBag.Title = "AddJob";
    var user = (JobConnector.Models.User)Session["user"];
}

<div class="container bg-white p-3">
    <h2 class="text-center">ADD JOB</h2>


    <form method="post">
        <p class="text-danger">@ViewData["error_message"]</p>
        <p class="text-success">@ViewData["success_message"]</p>
        <div class="row my-1 justify-content-between">
            <div class="col-6">
                <label for="job_title">Job Title</label>
                <input class="form-control" type="text" name="job_title" required />
            </div>

            <div class="col-6">
                <label for="positions">Positions Available</label>
                <input class="form-control" type="number" name="positions" required />
            </div>
        </div>

        <div class="row my-1">
            <div class="col-12">
                <label for="description">Description</label>
                <textarea class="form-control" type="text"
                          name="description" required
                          rows="7"></textarea>
            </div>
        </div>

        <div class="row my-1">
            <div class="col-6">
                <label for="qualifications">Qualifications/Education Required</label>
                <input class="form-control" type="text" name="qualifications" required />
            </div>

            <div class="col-6">
                <label for="experience">Experience Required</label>
                <input class="form-control" type="text" name="experience" required />
            </div>
        </div>

        <div class="row my-1">
            <div class="col-6">
                <label for="specializations">Specialisation Required</label>
                <input class="form-control" type="text" name="specializations" required />
            </div>

            <div class="col-6">
                <label for="last_date">Last Date To Apply</label>
                <input class="form-control" name="last_date" type="date" required />
            </div>
        </div>

        <div class="row my-1">
            <div class="col-6">
                <label for="salary">Salary</label>
                <input class="form-control" name="salary" type="number" required />
            </div>

            <div class="col-6">
                <label for="job_type">Job Type</label>
                <select name="job_type" class="form-select">
                    <option value="fulltime">Full-time</option>
                    <option value="parttime">Part-time</option>
                    <option value="remote">Remote</option>
                    <option value="freelance">Freelance</option>
                </select>
            </div>
        </div>

        <div class="row my-1">
            <div class="col-6">
                <label for="company_name">Company Name</label>
                <input type="text" name="company_name" class="form-control" required />
            </div>

            <div class="col-6">
                <label for="company_email">Company Email</label>
                <input name="company_email" type="email" class="form-control" required />
            </div>
        </div>

        <div class="row my-1">
            <div class="col-6">
                <label for="company_website">Company Website</label>
                <input name="company_website" type="url" class="form-control" required />
            </div>

            <div class="col-6">
                <label for="company_address">Address</label>
                <input type="text" name="company_address" class="form-control" required />
            </div>
        </div>

        <div class="row my-1">
            <div class="col-8">
                <label for="company_logo">Company Logo (URL)</label>
                <input name="company_logo" class="form-control" type="url" placeholder="image url" required />
            </div>

        </div>

        <div class="row d-flex align-items-center justify-content-center my-3">
            <button class="btn btn-info col-5">UPLOAD</button>
        </div>
    </form>
    
</div>

